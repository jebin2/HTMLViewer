{
	"manifest_version": 3,
	"name": "HTML Viewer",
	"version": "1.0",
	"description": "Paste HTML and view it in a new tab",
	"action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	  }
	},
	"permissions": ["tabs", "activeTab", "scripting"],
	"host_permissions": ["<all_urls>"],
	"background": {
	  "service_worker": "background.js"
	},
	"web_accessible_resources": [
	  {
		"resources": ["viewer.html"],
		"matches": ["<all_urls>"]
	  }
	]
  }